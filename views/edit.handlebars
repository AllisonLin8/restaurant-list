<div class="container">
    <h1 class="mb-1 restaurant-edit-title">修改餐廳資訊</h1>
    <form action="/restaurants/{{restaurant._id}}/edit" method="POST">
        <div class="mb-3">
            <label for="name">名稱</label>
            <input type="text" id="name" name="name" value="{{restaurant.name}}" required>
        </div>

        <div class="mb-3">
            <label for="name_en">英文名稱</label>
            <input type="text" id="name_en" name="name_en" value="{{restaurant.name_en}}">
        </div>

        <div class="mb-3">
            <label for="category">類別</label>
            <input type="text" id="category" name="category" value="{{restaurant.category}}">
        </div>

        <div class="mb-3">
            <label for="image">圖片連結</label>
            <input type="url" id="image" name="image" value="{{restaurant.image}}">
        </div>

        <div class="mb-3">
            <label for="location">地址</label>
            <input type="text" id="location" name="location" value="{{restaurant.location}}">
        </div>

        <div class="mb-3">
            <label for="phone">電話</label>
            <input type="text" id="phone" name="phone" value="{{restaurant.phone}}">
        </div>

        <div class="mb-3">
            <label for="google_map">google地圖連結</label>
            <input type="url" id="google_map" name="google_map" value="{{restaurant.google_map}}">
        </div>

        <div class="mb-3">
            <label for="rating">評分</label>
            <input type="number" min="0" max="5" step="0.1" id="rating" name="rating" value="{{restaurant.rating}}">
        </div>

        <div class="mb-3">
            <label for="description">描述</label>
            <textarea rows="5" id="description" name="description">{{restaurant.description}}</textarea>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit">Save</button>
        </div>
    </form>
</div>